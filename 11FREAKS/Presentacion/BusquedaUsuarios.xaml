<UserControl x:Class="_11FREAKS.Presentacion.BusquedaUsuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_11FREAKS.Presentacion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
            <TextBox x:Name="txtUsuario"  MinWidth="200"/>
            <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Right" Click="btnBuscar_Click"/>
        </StackPanel>
        <ListBox x:Name="listBoxUsuarios" Grid.Row="1" Margin="5" SelectionChanged="listBoxUsuarios_SelectionChanged" >
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Borrar Usuario" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>

        </ListBox>












    </Grid>
</UserControl>
